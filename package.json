{
  "name": "@natlibfi/mongo-cleaner",
  "version": "3.0.1-alpha.2",
  "license": "MIT",
  "description": "Mongo database cleaner. Removes all items from collection based on creationTime time stamp (UTC)",
  "author": {
    "name": "The National Library of Finland"
  },
  "homepage": "https://github.com/natlibfi/mongo-cleaner",
  "bugs": {
    "url": "https://github.com/natlibfi/mongo-cleaner/issues"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "esbuild \"src/**/*.js\" --sourcemap --platform=node --outdir=dist",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec './src/*.test.js'",
    "test:base:only": "node --test --test-only --test-force-exit --experimental-test-coverage --test-reporter=spec './src/*.test.js'",
    "test": "npm run lint && npm run test:base",
    "test:dev": "npm run lint:dev && npm run test:base"
  },
  "dependencies": {
    "@natlibfi/melinda-backend-commons": "^3.0.2",
    "moment": "^2.30.1",
    "mongodb": "^7.0.0"
  },
  "devDependencies": {
    "@natlibfi/fixugen": "^3.0.0",
    "@natlibfi/fixura": "^4.0.0",
    "@natlibfi/fixura-mongo": "^3.0.2",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2"
  }
}
